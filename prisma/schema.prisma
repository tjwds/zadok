// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// TODO
datasource db {
  provider = "sqlite"
  url      = "file:./zadok.db"
}

// TODO for now, assume single-user

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  // TODO do I care about creation / close dateTimes? probably notâ€¦
  done        Boolean    @default(false)
  TimeBlock   TimeBlock? @relation(fields: [timeBlockId], references: [id])
  timeBlockId Int?
}

model Habit {
  id          Int             @id @default(autoincrement())
  title       String
  // TODO assuming, for now, that every habit is daily
  // TODO toggle habits as active / inactive
  logEntries  HabitLogEntry[]
  TimeBlock   TimeBlock?      @relation(fields: [timeBlockId], references: [id])
  timeBlockId Int?
}

model HabitLogEntry {
  id      Int      @id @default(autoincrement())
  time    DateTime @default(now())
  habit   Habit    @relation(fields: [habitId], references: [id])
  habitId Int
}

model Goal {
  id    Int      @id @default(autoincrement())
  time  DateTime @default(now())
  title String
  done  Boolean  @default(false)
}

model TimeBlock {
  id     Int     @id @default(autoincrement())
  title  String
  tasks  Task[]
  habits Habit[]
}
